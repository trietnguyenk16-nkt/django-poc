            }
        }
        stage("Build") {
            steps {
		    echo "build step"
                // dir the same cd
                //dir("simple-java-maven-app") {
                    //sh "mvn clean install"
                //}
            }
        }
		stage("Test") {
			steps {
				echo "test step"
				//dir("simple-java-maven-app")
				//{
                    //sh "mvn test"
                //}
			}
		}
    }
}
