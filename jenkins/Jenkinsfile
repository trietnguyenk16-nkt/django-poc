pipeline {
    agent any
    stages {
        stage("Clean up")  {
          steps {
              deleteDir()
          }
        }
        stage("Clone Repo") {
            steps {
                sh git clone "https://github.com/trietnguyenk16-nkt/simple-java-maven-app.git"
                
            }
        }
        stage("Build") {
            steps {
                // dir the same cd
                dir("simple-java-maven-app") {
                    sh "mvn clean install"
                }
            }
        }
		stage("Test") {
			steps {
				dir("simple-java-maven-app") {
                    sh "mvn test"
                }
			}
		}
    }
}